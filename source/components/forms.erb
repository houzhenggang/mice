<div class="container">
  <div class="grid twelve">

    <div class="column three">
      <%= partial "shared/sidebar" %>
    </div>

    <div class="column nine doc">

      <h1 class="title">Form</h1>

      <h2>Basic example</h2>
      <section class="example">
        <%= partial "shared/form", :locals => { :type => nil } %>
      </section>

<% code "html" do %>
