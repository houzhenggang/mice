<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Mice" %></title>

    <%= stylesheet_link_tag "doc" %>

    <%= javascript_include_tag  "doc" %>
  </head>

  <body class="<%= "#{page_classes}-page" -%>">

    <nav class="navbar">
      <div class="container">
        <div class="logo">
          <a href="/" class="brand">Mice</a>
        </div>

        <ul class="menu">
          <li class="<%= "active" if page_classes == "mobile" -%>"><a href="/mobile.html">Mobile</a></li>
          <li class="<%= "active" if page_classes == "grid" -%>"><a href="/grid.html">Grid</a></li>
          <li class="<%= "active" if page_classes == "icons" -%>"><a href="/icons.html">Icons</a></li>
        </ul>

        <ul class="menu right">
          <li><a href="https://github.com/miclle/mice">Gighub</a></li>
        </ul>
      </div>
    </nav>

    <%= yield %>

    <footer>
      <div class="container">
        <p>Mice was lovingly crafted by  <a href="http://twitter.com/miclle" target="_blank">@miclle</a></p>
        <p>Code licensed under <a href="https://github.com/miclle/mice/blob/master/LICENSE" target="_blank">MIT</a>.</p>
        <ul>
          <li>Currently v0.0.4</li>
          <li><a href="https://github.com/miclle/mice">Mice</a></li>
        </ul>
      </div>
    </footer>

  </body>
</html>